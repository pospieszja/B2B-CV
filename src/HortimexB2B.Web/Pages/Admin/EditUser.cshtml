@page
@model HortimexB2B.Web.Pages.Admin.EditUserModel
@{
    ViewData["Title"] = "EditUser";
}

<h2>Edycja użytkownika</h2>

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="EditUser.Id" />

    <div class="form-group">
        <label asp-for="EditUser.Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="EditUser.Email" class="form-control">
            <span asp-validation-for="EditUser.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EditUser.GraffitiId" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="EditUser.GraffitiId" class="form-control">
            <span asp-validation-for="EditUser.GraffitiId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EditUser.Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="EditUser.Password" class="form-control">
            <span asp-validation-for="EditUser.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary" value="Zapisz" />
        </div>
    </div>

</form>