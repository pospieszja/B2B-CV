@page
@model HortimexB2B.Web.Pages.Admin.AddUserModel
@{
    ViewData["Title"] = "Dodaj użytkownika";
}

<h2>Nowy użytkownik</h2>

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AddUser.Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="AddUser.Email" class="form-control">
            <span asp-validation-for="AddUser.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddUser.GraffitiId" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="AddUser.GraffitiId" class="form-control">
            <span asp-validation-for="AddUser.GraffitiId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddUser.Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="AddUser.Password" class="form-control">
            <span asp-validation-for="AddUser.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary" value="Utwórz" />
        </div>
    </div>
</form>