@using HortimexB2B.Infrastructure.Identity;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-page="/User/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Profil<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>
                        <a asp-page="/User/Index" title="Manage">@UserManager.GetUserName(User)</a>
                    </li>
                    <li>
                        <a href="#" onclick="document.getElementById('logoutForm').submit();">Wyloguj</a>
                    </li>
                </ul>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-page="/User/Login"><i class="fa fa-user"></i> Logowanie</a></li>
    </ul>
}
