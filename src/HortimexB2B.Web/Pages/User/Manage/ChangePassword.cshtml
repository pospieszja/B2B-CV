@page
@model HortimexB2B.Web.Pages.User.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Zmiana hasła";
}

<h2>Zmiana hasła</h2>

@if (@Model.ChangePasswordViewModel.StatusMessage)
{
    <div class="alert alert-success">
        <strong>Sukces!</strong> Twoje hasło zostało pomyślnie zmienione.
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ChangePasswordViewModel.OldPassword" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="ChangePasswordViewModel.OldPassword" class="form-control">
            <span asp-validation-for="ChangePasswordViewModel.OldPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ChangePasswordViewModel.NewPassword" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="ChangePasswordViewModel.NewPassword" class="form-control">
            <span asp-validation-for="ChangePasswordViewModel.NewPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ChangePasswordViewModel.ConfirmPassword" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="ChangePasswordViewModel.ConfirmPassword" class="form-control">
            <span asp-validation-for="ChangePasswordViewModel.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary" value="Zmień" />
        </div>
    </div>

</form>

