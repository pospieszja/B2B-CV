@page
@model HortimexB2B.Web.Pages.User.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

<form method="post" class="form-horizontal center-block">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
            <input asp-for="LoginViewModel.Email" placeholder="Adres e-mail" class="form-control">
            <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
            <input asp-for="LoginViewModel.Password" placeholder="Hasło" class="form-control">
            <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
            <input type="submit" class="login__button" value="Zaloguj się" />
        </div>
    </div>
</form>
